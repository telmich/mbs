<%= form_for(@booking) do |f| %>
<%= render :partial => "formheader", :locals => { :booking => @booking, :f => f } %>

<div class=recordset>
<table>

<thead>
   <tr class="header">
      <th>Book</th>
      <th>Bookable (*)</th>
      <th>Type</th>
      <th>CPU</th>
      <th>Cores</th>
      <th>RAM</th>
   </tr>
</thead>
<tbody>
   <% @machine_types.each do |machine_type| %>
      <tr class="entry">
         <td><%= text_field_tag "booking[nodes_count][" + machine_type.id.to_s + "]",
                                 @booking.nodes_count(machine_type.id), :size => 2 %></td>
         <td><%= machine_type.bookable %></td>
         <td><%= machine_type.name %></td>
         <td><%= machine_type.cpu_type %></td>
         <td><%= machine_type.cores %></td>
         <td><%= machine_type.ram_gib %></td>
      </tr>
   <% end %>
</table>
</div>
  <div class="actions">
    <%= f.submit %>
  </div>

<%end%>
