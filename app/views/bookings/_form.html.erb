<%= form_for(@booking) do |f| %>
  <% if @booking.errors.any? %>
  <div id="errorExplanation">
    <h2><%= pluralize(@booking.errors.count, "error") %> prohibited this booking from being saved:</h2>
    <ul>
    <% @booking.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>

  <div class="field">
    <%= f.label :begin %><br />
    <%= f.datetime_select :begin %>
  </div>
  <div class="field">
    <%= f.label :end %><br />
    <%= f.datetime_select :end %>
  </div>
<div class=recordset>
<table>

<thead>
   <tr class="header">
      <th>Book</th>
      <th>Bookable (*)</th>
      <th>Type</th>
      <th>CPU</th>
      <th>Cores</th>
      <th>RAM</th>
   </tr>
</thead>
<tbody>
   <% @machine_types.each do |machine_type| %>
      <tr class="entry">
         <td><%= text_field_tag "booking[nodes_count][" + machine_type.id.to_s + "]",
                                 @booking.nodes_count(machine_type.id), :size => 2 %></td>
         <td><%= machine_type.bookable %></td>
         <td><%= machine_type.name %></td>
         <td><%= machine_type.cpu_type %></td>
         <td><%= machine_type.cores %></td>
         <td><%= machine_type.ram_gib %></td>
      </tr>
   <% end %>
</table>
</div>
  <div class="actions">
    <%= f.submit %>
  </div>


<%end%>
