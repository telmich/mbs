<h1>Welcome to the reservation system</h1>

<h2>Current bookings</h2>
<table>
  <tr>
    <th>User</th>
    <th>Booking #</th>
    <th>Reservation #</th>
    <th>Machine #</th>
  </tr>

<% @br.each do |reservation| %>
      <tr>
      <td> <%= reservation[:username] %> </td>
      <td> <%= reservation[:id] %> </td>
      <td> <%= reservation[:reservation][:id] %> </td>
      <td> <%= reservation[:machine_name] %> (<%= reservation[:reservation][:machine_id] %>) </td>
      </tr>
<% end %>
</table>

<ul>
   <li><%= link_to 'Users', users_path %>
   <li><%= link_to 'Machines', machines_path %>
   <li><%= link_to 'Reservations', reservations_path %>
</ul>

<h2>Reserve machines </h2)
<% form_for :a, do %>

   <br><%= label_tag(:user_id, "User:") %><%= text_field(:user, :name) %>
   <br><%= label_tag(:date_start, "Begin:") %><%= datetime_select("date", "start", :start_year => Date.today.year)
   
   %> 
   <br><%= label_tag(:date_start, "End:") %><%= datetime_select("date", "end", :default => 5.days.from_now)
   
    %> 

   <table>
   <% @machines.each do |machine| %>
      <tr class="entry">
         <td><%= machine.title %></td>
         <td><%= machine.description %></td>
         <td><%= check_box_tag "bookings[machine_ids][]", machine.id -%> </td>
      </tr>
   <% end %>
   </table>
   <%= submit_tag("Book!") %> 
<% end %> 

