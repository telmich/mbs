<h1>Listing machines</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Status</th>
    <th>Used by?</th>
    <th>Type</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @machines.each do |machine| %>
  <tr>
    <td><%= machine.name %></td>
    <td><%= machine.description %></td>
    <td><%= machine.machine_status.name %></td>
    <td><%= machine.used_by %></td>
    <td><%= link_to machine.machine_type.name, machine_type_path(machine.machine_type_id) %></td>
    <td><%= link_to 'Show', machine %></td>
    <td><%= link_to 'Edit', edit_machine_path(machine) %></td>
    <td><%= link_to 'Destroy', machine, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

