<%= form_for(@machine) do |f| %>
  <% if @machine.errors.any? %>
  <div id="errorExplanation">
    <h2><%= pluralize(@machine.errors.count, "error") %> prohibited this machine from being saved:</h2>
    <ul>
    <% @machine.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </div>
  <div class="field">
   <%= collection_select(:machine, :machine_type_id, MachineType.all, :id, :name, {:prompt => true}) %>
  </div>
  <div class="field">
    <%= f.label :usable %><br />
    <%= f.check_box :usable, :checked => true %>
  </div>
  <div class="field">
   <%= collection_select(:machine, :machine_status_id, MachineStatus.all, :id, :name, {:prompt => true}) %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
